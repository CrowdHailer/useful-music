<main class="content">
    <aside class="col col-1-5">
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/customers/<%= @customer.id %>">My Account</a>
            </li>
            <li>
                <a href="/customers/<%= @customer.id %>/edit">Edit Account</a>
            </li>
            <li>
                <a href="/customers/<%= @customer.id %>/change_password">Change Password</a>
            </li>
            <li>
                <a href="/customers/<%= @customer.id %>/orders">Orders</a>
            </li>
            <li>
                <a href="/customers/<%= @customer.id %>/purchases">Downloads</a>
            </li>
            <li>
                <form id="form_id" action="/sessions" method="post">
                    <%= csrf_tag %>
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" value="logout">
                </form>
            </li>
        </ul>
    </aside>
    <article class="col col-4-5">
        <h2><%= @customer.name %></h2>
        <h3><%= @customer.email %></h3>
        <% if @customer.survey_unanswered? %>
            <div class="bold">
              <a href="/customers/<%= @customer.id %>/edit#customer-questions">Tell us more</a>
            </div>
        <% end %>
        <ul>
            <li>
                <b>name </b><%= @customer.name %>
            </li>
            <li>
                <b>name </b><%= @customer.email %>
            </li>
            <li>
                <b>name </b><%= @customer.country %>
            </li>
        </ul>
        <h2>Available Downloads</h2>
        <ul>
            <% @customer.orders.map(&:shopping_basket).flat_map(&:purchases).each do |purchase| %>
                <a target="_blank" download href="<%= purchase.item.asset.url %>"><%= purchase.item.piece.product_name %>:<%= purchase.item.name %></a> order id: <%= purchase.shopping_basket.order.id %><br>
            <% end %>
        </ul>
    </article>
</main>
