<main class="archive">
    <header class="admin">
        <h2 class="left" id="menu-title">Discounts
            <ul class="dropdown menu-container">
                <li class="menu-option">
                  <a class="menu-link" href="/customers">Customers</a>
                </li>
                <li class="menu-option">
                  <a class="menu-link" href="/pieces">Pieces</a>
                </li>
            </ul>
        </h2>
        <span class="right">
            <a class="approve" href="/discounts/new">New Discount</a>
        </span>
    </header>
    <header class="admin">
        <form class="right" action="/discounts" method="get">
            <button class="action" name="page" value="1" <%= 'disabled' unless @discounts.prev_page %>>First Page</button>
            <button class="action" name="page" value="<%= @discounts.prev_page %>" <%= 'disabled' unless @discounts.prev_page %>>Previous</button>
            <select class="action" name="page_size">
                <option <%= 'selected' if @discounts.page_size == 10 %>>10</option>
                <option <%= 'selected' if @discounts.page_size == 15 %>>15</option>
                <option <%= 'selected' if @discounts.page_size == 20 %>>20</option>
            </select>
            <button class="action" name="page" value="1">Refresh</button>
            <button class="action" name="page" value="<%= @discounts.next_page %>" <%= 'disabled' unless @discounts.next_page %>>Next</button>
            <button class="action" name="page" value="<%= @discounts.page_count %>" <%= 'disabled' unless @discounts.next_page %>>Last Page</button>
        </form>
    </header>
    <table class="index">
        <thead>
            <tr>
                <th>Code</th>
                <th>Value</th>
                <th>Allocation</th>
                <th>Per Customer</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            <% @discounts.each do |discount| %>
                <tr>
                    <th>
                        <a href="/discounts/<%= discount.id %>/edit"><%= discount.code %></a>
                    </th>
                    <th>
                        <%= discount.value.format %>
                    </th>
                    <th>
                        <%= discount.allocation %>
                    </th>
                    <th>
                        <%= discount.customer_allocation %>
                    </th>
                    <th>
                        <%= discount.start_datetime.strftime('%Y-%m-%d') %>
                    </th>
                    <th>
                        <%= discount.end_datetime.strftime('%Y-%m-%d') %>
                    </th>
                    <th>
                        <form id="form_id" action="/discounts/<%= discount.id %>" method="post" onsubmit="return confirm('Are you sure you want to destroy <%= discount.code %> ')">
                            <%= csrf_tag %>
                            <input type="hidden" name="_method" value="DELETE">
                            <input class="destroy" type="submit" name="some_name" value="Destroy">
                        </form>
                    </th>
                </tr>
            <% end %>
        </tbody>
    </table>
</main>
