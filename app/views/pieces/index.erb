<main class="content">
    <aside id="search" class="col col-1-5">
      <form class="pure-form" action="/pieces" method="get">
          <h4>Category</h4>
          <% [:solo,
          :solo_with_accompaniment,
          :duet,
          :trio,
          :quarter,
          :larger_ensembles].each do |category| %>
              <label class="pure-checkbox">
                  <input type="checkbox" name="catalogue_search[category][]" value="<%= category %>">
                  <%= category.capitalize %>
              </label>
          <% end %>
          <h4>Level</h4>
          <% [:beginner,
            :intermediate,
            :advanced,
            :professional].each do |level| %>
              <label class="pure-checkbox">
                  <input type="checkbox" name="catalogue_search[level][]" value="<%= level %>">
                  <%= level.capitalize %>
              </label>
          <% end %>
          <h4>Instrument</h4>
          <% [:piano,
          :recorder,
          :flute,
          :oboe,
          :clarineo,
          :clarinet,
          :basson,
          :saxophone,
          :trumpet,
          :violin,
          :viola,
          :percussion].each do |instrument| %>
              <label class="pure-radio">
                  <input type="radio" name="instrument" value="<%= instrument %>">
                  <%= instrument.capitalize %>
              </label>
          <% end %>
          <button type="submit" class="pure-button right">Search</button>
      </form>
    </aside>
    <article class="col col-4-5">

        <table class="pure-table">
            <thead>
                <tr>
                    <th>Catalogue number</th>
                    <th>Title</th>
                    <th>Sub heading</th>
                    <th>Category</th>
                    <th colspan=3>Action</th>
                </tr>
            </thead>

            <tbody>
                <% pieces.each do |piece| %>
                    <tr>
                        <th>
                            UD<%= piece %>
                        </th>
                        <th>
                            <%= piece.title %>
                        </th>
                        <th>
                            <%= piece.sub_heading %>
                        </th>
                        <th>
                            <%= piece.category %>
                        </th>
                        <th>
                            <a href="/pieces/<%= piece.id %>">show</a>
                        </th>
                        <th>
                            <a href="/pieces/UD<%= piece.id %>/edit">edit</a>
                        </th>
                        <th>
                            <form id="form_id" action="/pieces/<%= piece.id %>" method="post" onsubmit="return confirm('Are you sure you want to destroy UD<%= piece.id %> and <%= piece.items.count %> associated items?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="submit" name="some_name" value="Destroy">
                            </form>
                        </th>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </article>
</main>
