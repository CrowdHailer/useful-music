<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>UsefulMusic.com</title>
  <!-- <link rel="stylesheet" href="//yui.yahooapis.com/pure/0.5.0/pure-min.css"> -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/stylesheets/application.css">
</head>
<body>

  <% if flash['success'] %>
      <div class="content flash success">
          <%= flash['success'] %> <i class="fa fa-times right"></i>
      </div>
  <% end %>
  <% if flash['error'] %>
      <div class="content flash error">
          <%= flash['error'] %> <i class="fa fa-times right"></i>
      </div>
  <% end %>
  <%= yield %>
  <script charset="utf-8">
    var $$ = document.querySelectorAll

    var flash = document.querySelectorAll('.flash')

    function slideUp(evt){
      evt.target.classList.add('read');
    }
    flash[0].addEventListener("click", slideUp);
    flash[1].addEventListener("click", slideUp);

  </script>
</body>
</html>
